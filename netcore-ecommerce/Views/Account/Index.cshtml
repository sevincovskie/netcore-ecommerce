@model netcore_ecommerce.DTO.AppUserEdit

@{
    ViewData["Title"] = "Account";
    Layout = "_AdminLayout";
}
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">
            Account
        </h4>
    </div>
    <div class="col-md-7 align-self-center text-end">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb justify-content-end">
                <li class="breadcrumb-item">
                    <a href="#">
                        Home
                    </a>
                </li>
                <li class="breadcrumb-item active">
                    Account
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <form method="POST">
            <div class="form-group">
                <input type="text" asp-for="FirstName" placeholder="First name" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" asp-for="LastName" placeholder="Last name" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="email" asp-for="Email" placeholder="E-mail address" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" asp-for="City" placeholder="City" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" placeholder="Password" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary btn-lg"/>
            </div>
        </form>
    </div>
</div>